    <!-- Main App Theme-->

    <style name="AppTheme" parent="Theme.MaterialComponents">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/TransGreenActionBar</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="TransGreenActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/colorPrimary</item>
    </style>

    <!-- Opening Theme -->

    <style name="OpeningTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ClearActionBar</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ClearActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>

