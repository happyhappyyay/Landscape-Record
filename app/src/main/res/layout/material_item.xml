<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/material_item_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/selector_row"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/material_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".75"
            android:text="@string/name_text_field"
            android:textSize="12sp"
            app:layout_column="12"
            app:layout_row="0" />

        <TextView
            android:id="@+id/material_item_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/material_type"
            android:textSize="12sp"
            app:layout_column="15"
            app:layout_row="0" />

        <TextView
            android:id="@+id/material_item_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/land_services_quantity"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/material_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/material_price"
            android:textSize="12sp"
            app:layout_column="13"
            app:layout_row="0" />

        <TextView
            android:id="@+id/material_item_add_remove_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/material_item_add_remove" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>